                <Border Width="120"
            Height="80"
            Margin="10 0 0 0"
            Style="{StaticResource skills3}"
            CornerRadius="10">
                    <TextBlock Text="Empathy"
                   Margin="10"
                   Foreground="White"
                   FontFamily="/Fonts/#Rubik"
                   FontSize="22"
                   HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                        Height="80"
                        Margin="10 0 0 0"
                        Style="{StaticResource skills4}"
                        CornerRadius="10">
                    <TextBlock Text="Adapta-&#x0a;bility"
                               Margin="10"
                               Foreground="White"
                               FontFamily="/Fonts/#Rubik"
                               FontSize="22"
                               HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                Height="80"
                Margin="10 0 0 0"
                Style="{StaticResource skills5}"
                CornerRadius="10">
                    <TextBlock Text="Team-&#x0a;work"
                       Margin="10"
                       Foreground="White"
                       FontFamily="/Fonts/#Rubik"
                       FontSize="22"
                       HorizontalAlignment="Left"/>
                </Border>
            </StackPanel>


        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15 0 0 0"/>
                </Style>
            </StackPanel.Resources>

            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                <Border Width="120"
                        Height="80"
                        Style="{StaticResource skills1}"
                        CornerRadius="10"
                        Margin="0">
                    <TextBlock Text="Respon-&#x0a;sible"
                                   Margin="10"
                                   Foreground="White"
                                   FontFamily="/Fonts/#Rubik"
                                   FontSize="22"
                                   HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                        Height="80"
                        Margin="10 0 0 0"
                        Style="{StaticResource skills2}"
                        CornerRadius="10">
