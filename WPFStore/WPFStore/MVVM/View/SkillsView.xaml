                               HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                        Height="80"
                        Margin="10 0 0 0"
                        Style="{StaticResource skills3}"
                        CornerRadius="10">
                    <TextBlock Text="Charisma"
                               Margin="10"
                               Foreground="White"
                               FontFamily="/Fonts/#Rubik"
                               FontSize="22"
                               HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                        Height="80"
                        Margin="10 0 0 0"
                        Style="{StaticResource skills4}"
                        CornerRadius="10">
                    <TextBlock Text=" Dedica-&#x0a;tion"
                               Margin="10"
                               Foreground="White"
                               FontFamily="/Fonts/#Rubik"
                               FontSize="22"
                               HorizontalAlignment="Left"/>

                </Border>

                <Border Width="120"
                        Height="80"
                        Margin="10 0 0 0"
                        Style="{StaticResource skills5}"
                        CornerRadius="10">
                    <TextBlock Text="Calmness"
                               Margin="10"
                               Foreground="White"
                               FontFamily="/Fonts/#Rubik"
                               FontSize="22"
                               HorizontalAlignment="Left"/>
                </Border>
            </StackPanel>


        </StackPanel>
    </StackPanel>
</UserControl>
